# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID:
# 1. Add your bot to the group
# 2. Send a message in the group
# 3. Visit: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
# 4. Look for "chat":{"id": in the response
TELEGRAM_CHAT_ID=your_chat_id_here

# Polling interval in seconds (how often to check for new tokens)
# Default: 60 seconds
CHECK_INTERVAL=60

# Maximum age of tokens to fetch in hours (1-24)
# Only tokens created within this time window will be shown
# Default: 6 hours
MAX_TOKEN_AGE_HOURS=6

# Minimum liquidity in USD to filter out scam tokens
# Tokens with liquidity below this value will be ignored
# Default: 500 USD
MIN_LIQUIDITY_USD=500

# Enable debug mode for verbose logging
# Set to 'true' to see detailed filtering information
# Default: false
DEBUG_MODE=false
